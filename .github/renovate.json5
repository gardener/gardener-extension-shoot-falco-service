{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
  ],
  dependencyDashboard: true,
  dependencyDashboardTitle: 'Renovate Dependency Dashboard',
  labels: [
    'kind/enhancement',
    'reviewed/ok-to-test',
  ],
  minimumReleaseAge: '3 days',
  schedule: ['before 5am on Monday'],
  postUpdateOptions: [
    'gomodTidy',
  ],
  kubernetes: {
    managerFilePatterns: [
      '/\\.yaml$/',
      '/\\.yml$/',
    ],
  },
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '/^charts/.*\\.yaml$/',
      ],
      matchStrings: [
        'pluginRef:\\s+"(?<depName>[^:]+):(?<currentValue>[^"]+)"',
      ],
      datasourceTemplate: 'docker',
    },
  ],
  packageRules: [
    {
      description: 'Group all Falco plugin updates together',
      matchDatasources: [
        'docker',
      ],
      groupName: 'falco-plugins',
      matchPackageNames: [
        '/^ghcr\\.io/falcosecurity/plugins/',
      ],
    },
    {
      description: 'Group all non-Gardener Go dependencies together',
      matchManagers: [
        'gomod',
      ],
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      groupName: 'non-gardener-go-dependencies',
      matchPackageNames: [
        '!/^github\\.com/gardener/',
      ],
    },
    {
      description: 'Separate PRs for Gardener components',
      matchManagers: [
        'gomod',
      ],
      groupName: null,
      matchPackageNames: [
        '/^github\\.com/gardener/',
      ],
    },
  ],
}
